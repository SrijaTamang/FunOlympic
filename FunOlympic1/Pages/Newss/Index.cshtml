@page
@model FunOlympic1.Pages.Newss.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    .h2 {
        font-size: 30px;
        font-family: 'EB Garamond';
        font-weight: bold;
    }

    .card {
        padding: 10px;
    }
</style>

<style>
    .fixed-layout {
        table-layout: fixed;
    }

        .fixed-layout th:nth-child(1), .fixed-layout td:nth-child(1) {
            width: 5%;
            overflow: hidden;
            text-overflow: ellipsis; /* This will add ... for text that doesn't fit */
        }
    /* Adjust the widths of other columns as needed */
</style>

<div class="container">
<h1>Index</h1>

<p>
    <a asp-page="Create" class="btn btn-success"> Create New</a>
</p>
    <div class="card">
        <div class="table-responsive">
            <table class="table fixed-layout" style="width:100%;">
    <thead>
        <tr>
             <th style="width:60%;">
                @Html.DisplayNameFor(model => model.News[0].ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.News[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.News) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
    </div>
</div>