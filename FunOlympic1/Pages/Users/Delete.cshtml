@page
@model FunOlympic1.Pages.User.DeleteModel

@{
    ViewData["Title"] = "Delete";
}
<style>
    .h2 {
        font-size: 30px;
        font-family: 'EB Garamond';
        font-weight: bold;
    }

    .card {
        padding: 10px;
    }
</style>

<div class="container">

    <h1 class="h2">Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="card"> 
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Video.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Video.EmailConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Video.PhoneNumber)
        </dd>

    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Video.Id" />
        <input type="submit" value="Delete" class="btn btn-danger danger" /> |
            <a asp-page="./Index" class="btn btn-info"> <i class="bi bi-caret-down"></i> Back to List</a>
    </form>
</div>
</div>

<style>
    .danger {
        background-color: red;
    }
</style>
